<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/drawer_layout"
    tools:context=".ViewWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:textAppearance="@style/NewFontStyle"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#58B1DA"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn9"
            android:gravity="center"
            android:id="@+id/idfirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:textAllCaps="true"
            android:textAppearance="@style/NewFontStyle"
            android:textColor="#fff"
            android:textSize="23dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="363dp"
            android:layout_height="179dp"
            android:src="@drawable/wallet" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_below="@+id/imgid"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn11"

            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:background="@drawable/loginbtnblue"
                android:gravity="center"
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="10dp"
                android:text="amount"
                android:textAllCaps="true"
                android:textAppearance="@style/NewFontStyle"
                android:textColor="#fff"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="7dp"
                android:text="njhggc"
                android:textAppearance="@style/NewFontStyle"
                android:textColor="#515151"
                android:textSize="19dp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/fab"
                app:fabSize="normal"
                app:fabCustomSize="60dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/plus"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:text="Add to Wallet"
                android:textAppearance="@style/NewFontStyle"
                android:textColor="#0B7A0F"
                android:textSize="15dp"
                android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/NewFontStyle"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/user_menu" />

</androidx.drawerlayout.widget.DrawerLayout>